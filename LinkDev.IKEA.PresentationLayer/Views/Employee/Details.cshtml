@model EmployeeDetailsDto
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<br />
<br />

<div class="row justify-content-start align-items-center">
    <div class="col-4">
        <img src="~/files/images/@Model.Image" class="img-fluid rounded-2 w-50 h-50" alt="Employee Image"/>
    </div>
</div>



<ul class="nav nav-tabs" id="employeeTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tabs" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
    </li>

    <li class="nav-item" role="presentation">
        <a class="nav-link" id="administration-tabs" data-bs-toggle="tab" href="#administration" role="tab" aria-controls="administration" aria-selected="false">Administration</a>
    </li>
</ul>


<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general">
        <div class="row">
            <div class="form-group col-6 mb-4">
                <label asp-for="Name" class="form-lable"></label>
                <input asp-for="Name" class="form-control " readonly />
            </div>
            <div class="form-group col-6 mb-4">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control " readonly />
            </div>
            <div class="form-group col-6 mb-4">
                <label asp-for="Department" class="form-label"></label>
                <input asp-for="Department" class="form-control " readonly />
            </div>
            <div class="form-group col-6 mb-4">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control " readonly />
            </div>
            <div class="form-group col-6 mb-4">
                <label asp-for="Age" class="form-label"></label>
                <input asp-for="Age" class="form-control " readonly />
            </div>
            <div class="form-group col-6 mb-4">
                <label asp-for="Salary" class="form-label"></label>
                <input asp-for="Salary" class="form-control " readonly />
            </div>
            <div class="form-group col-6 mb-4">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" class="form-control " readonly />
            </div>
            <div class="form-check col-6 mb-4">
                <label asp-for="EmployeeType" class="control-lable"></label>
                <select disabled asp-for="EmployeeType" asp-items="Html.GetEnumSelectList<EmployeeType>()" class="form-control">

                    <option value="">Choose...</option>

                </select>
            </div>
            <div class="form-check col-6 mb-4">

                <label class="control-lable mb-2" asp-for="Gender"></label>
                @foreach (Gender genderOption in Enum.GetValues(typeof(Gender)))
                {
                    <div class="form-check">
                        <input type="radio" asp-for="Gender" class="form-check-input" value="@genderOption" disabled />
                        <label asp-for="Gender" class="form-check-label">
                            @genderOption
                        </label>
                    </div>
                }
            </div>
            <div class="form-group col-6 mb-3 ">
                <label asp-for="HiringDate" class="form-label"></label>
                <input asp-for="HiringDate" class="form-control mb-3" type="date" readonly />
            </div>
            <div class="form-group col-12 my-3 ">
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" disabled />
                    <label asp-for="IsActive" class="form-check-label"></label>
                </div>
            </div>
        </div>
    </div>


    <div class="tab-pane fade p-4 border" id="administration" role="tabpanel" aria-labelledby="administration">
    <!-- First Row -->
    <div class="row">
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="CreatedBy"></label>
            <input asp-for="CreatedBy" class="form-control" disabled />
        </div>
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="CreatedOn"></label>
            <input asp-for="CreatedOn" class="form-control" disabled />
        </div>
    </div>
    
    <!-- Second Row -->
    <div class="row mt-3">
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="LastModifiedBy"></label>
            <input asp-for="LastModifiedBy" class="form-control" disabled />
        </div>
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="LastModifiedOn"></label>
            <input asp-for="LastModifiedOn" class="form-control" disabled />
        </div>
    </div>
</div>


    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back To list</a>
    </div>

</div>
