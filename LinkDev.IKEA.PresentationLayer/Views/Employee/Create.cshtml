@using LinkDev.IKEA.DataAccessLayer.Common.Enums
@model CreatedEmployeeDto
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<div class="row justify-content-center align-items-center flex-column">

    <h1 class="col-6 my-4">Create Employee</h1>

    <form asp-action="Create" class="row col-6">
        <div asp-validation-summary="ModelOnly"> </div>


        <div class="form-group col-6">
            <label asp-for="Name" class="form-lable"></label>
            <input asp-for="Name" class="form-control mb-3"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-6 ">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control mb-3" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group col-6 ">
            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control mb-3" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group col-6 ">
            <label asp-for="Age" class="form-label"></label>
            <input asp-for="Age" class="form-control mb-3" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="form-group col-6 ">
            <label asp-for="Salary" class="form-label"></label>
            <input asp-for="Salary" class="form-control mb-3" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
        <div class="form-group col-6 ">
            <label asp-for="PhoneNumber" class="form-label"></label>
            <input asp-for="PhoneNumber" class="form-control mb-3" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        
        
        <div class="form-check col-6 ">

            <label class="control-lable mb-2" asp-for="Gender"></label>
            @foreach (Gender genderOption in Enum.GetValues(typeof(Gender)))
            {
                <div class="form-check">
                    <input type="radio" asp-for="Gender" class="form-check-input" value="@genderOption" />
                    <label asp-for="Gender" class="form-check-label">
                        @genderOption
                    </label>
               </div>
            }
        </div>

        <div class="form-check col-6 ">
            <label asp-for="EmployeeType" class="control-lable mb-2"></label>
            <select asp-for="EmployeeType" asp-items="Html.GetEnumSelectList<EmployeeType>()" class="form-control">
                
                <!--asp-items ==> هاي بتوخذ الايتمز وبترسملي الاوبشنز-->
                <option value="">Choose...</option>

            </select>
        </div>

        <div class="form-group col-12 my-3 ">
            <div class="form-check">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                <label asp-for="IsActive" class="form-check-label"></label>
            </div>
        </div>

        <div class="form-group col-12 mb-3 ">
            <label asp-for="HiringDate" class="form-label"></label>
            <input asp-for="HiringDate" class="form-control mb-3" type="date"/>
            <span  asp-validation-for="HiringDate" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <input type ="submit" value="Create" class="btn btn-primary"/> | 
            <a asp-controller ="Employee" asp-action ="Index" class="btn btn-light"> 
                Back To List
            </a>

    </form>
</div>
