@model DepartmentDetailsDto
@{
    ViewData["Title"] = "Delete";
}

<h1>Are you sure to Delete this department?</h1>
<br />
<br />

<ul class="nav nav-tabs" id="departmentTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
    </li>

    <li class="nav-item" role="presentation">
        <a class="nav-link" id="administration-tab" data-bs-toggle="tab" href="#administration" role="tab" aria-controls="administration" aria-selected="false">Administration</a>
    </li>
</ul>


<div class="tab-content" id="myTabContent">
    <!-- General Tab Content -->
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general">

        <div class="row">

            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Code"></label>
                <input asp-for="Code" class="form-control" raedonly />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" raedonly />
            </div>
            <div class="form-group">
                <label class="col-form-label" asp-for="Description"></label>
                <input asp-for="Description" class="form-control" raedonly />
            </div>
            <div class="form-group">
                <label class="col-form-label" asp-for="CreationDate"></label>
                <input asp-for="CreationDate" class="form-control" raedonly />
            </div>

        </div>

    </div>

    <!-- Administration Tab Content -->
    <div class="tab-pane fade p-4 border" id="administration" role="tabpanel" aria-labelledby="administration">

        <div class="form-group col-6">
            <label class="col-form-label" asp-for="CreatedBy"></label>
            <input asp-for="CreatedBy" class="form-control" raedonly />
        </div>
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="CreatedOn"></label>
            <input asp-for="CreatedOn" class="form-control" raedonly />
        </div>
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="LastModifiedBy"></label>
            <input asp-for="LastModifiedBy" class="form-control" raedonly />
        </div>
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="LastModifiedOn"></label>
            <input asp-for="LastModifiedOn" class="form-control" raedonly />
        </div>

    </div>


    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="mt-4">
        <input type="submit" value="Delete" class="btn btn-danger"/>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>

</div>

